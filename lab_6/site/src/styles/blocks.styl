
.block-l, .block-r
  display flex
  justify-content space-between
  padding 10px
  margin 10px auto
  width 90%
  background #f5f5f5

  &__content
    flex 1
    padding 10px

    &__title
      font-size 1.2rem
      font-weight bold
      color $text-color

    &__text
      font-size 0.9rem
      line-height 1.4

  &__image
    width 30%
    background LightBlue
    display flex
    justify-content center
    align-items center
    img
      max-width 100%
    &:hover
      transform scale(1.03)
      box-shadow 0 4px 8px rgba(0, 0, 0, 0.2)
