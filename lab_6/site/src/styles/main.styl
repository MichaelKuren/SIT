@import "reset"
@import "variables"
@import "mixins"
@import "header"
@import "menu"
@import "images"
@import "search-bar"
@import "footer"
@import "logos"
@import "blocks"

img.big
  display block
  margin 0 auto
  padding 20px
  max-width 500px 

div.distro
  padding 20px
  margin 10px auto
  width 90%
  background #f5f5f5

section.table
  padding 20px
  margin 10px auto
  background #f5f5f5


@media (max-width: 768px)
  .images
    grid-template-columns 1fr

  .logos
    flex-wrap wrap
    display grid
    grid-template-columns 1fr


  .menu-line
    &__title
      display none

    justify-content center

    .menu
      display grid
      grid-template-columns 1fr 1fr
      gap 5px

      &__item
        text-align center
        padding 10px 5px

        &--active
          position static
          height auto
          top 0

