
.search-bar
  display flex
  justify-content flex-end
  padding 10px
  background grey
  gap 5px

  &__input
    padding 5px
    border 1px solid #ddd
    width 60%
    font-size 14px

  &__button
    padding 5px 10px
    border none
    background #333
    color white
    cursor pointer

    &:hover
      background #555
